---
const {
  title,
  subtitle,
  ctaUrl,
  ctaLabel,
  imageDesktop
} = Astro.props;
---

<section class="bg-[#0f0f0f] text-white">
  <div class="grid md:grid-cols-2">

    <!-- Columna izquierda -->
    <div class="order-1 flex flex-col justify-center px-6 md:px-20 gap-6 md:gap-8">
      <h1 class="font-titulo font-black tracking-tight leading-tight text-[32px] sm:text-4xl text-center md:text-center lg:text-4xl">
        <span>RODAR CON MASTERBAG</span><br />
        <span class="text-[#c59e51]">ES RODAR CON CLASE</span>
      </h1>

      <div class="flex flex-col gap-6 md:gap-8">
        <p class="text-[15px] md:text-base text-white text-center mb-2">{subtitle}</p>
        <p class="text-sm text-white text-center">Desde $349 900 — Envío incluido</p>

        <!-- Imagen alforjas -->
        <img src="/images/alforjas-sport.webp" alt="Alforjas Masterbag"
             class="w-64 sm:w-80 md:w-[420px] self-center -mt-16" />

        <!-- CTA + nota + Addi -->
        <div class="flex flex-col items-center gap-3 mx-auto -mt-2 sm:-mt-8">
          <a href={ctaUrl}
             class="bg-[#c59e51] text-black font-bold py-3 px-10 rounded-lg shadow-lg hover:opacity-90">
            {ctaLabel}
          </a>
          <p class="text-sm text-white text-center">
            Instalación sin herrajes | Compatibles con cualquier moto
          </p>

          <!-- Banner Addi -->
          <div class="addi-banner-wrapper self-center">
            <div class="addi-banner-bagde">
              <img src="/images/idCqAODBvq_1744675610093.jpg" alt="Addi Logo" />
            </div>
            <p class="addi-banner-info__message">
              Paga con <strong>Addi</strong> en hasta <strong>6 cuotas</strong>.
            </p>
            <a href="https://wa.me/573024042947?text=Hola,%20Quiero%20solicitar%20un%20link%20de%20pago%20de%20Addi%20para%20comprar%20mis%20alforjas"
               target="_self"
               class="addi-banner-button">
              Pide un link
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Columna derecha (imagen fondo moto) -->
    <div class="order-2 min-h-[320px] md:h-full lg:min-h-[640px] bg-cover bg-no-repeat bg-[center_right] md:rounded-l-none md:rounded-r-2xl overflow-hidden shadow-xl"
         style={`background-image:url(${imageDesktop});`}>
    </div>

  </div>
</section>

<style is:global>
  .addi-banner-wrapper {
    display: flex; align-items: center; gap: .5rem;
    background: transparent; border: none; padding: 6px 10px;
  }
  .addi-banner-badge, .addi-banner-bagde {
    background: #f5f5f5; width: 28px; height: 28px; border-radius: 9999px;
    display: flex; align-items: center; justify-content: center;
  }
  .addi-banner-info__message {
    font-family: Inter, system-ui, sans-serif;
    font-size: 14px; color: #fff; margin: 0;
  }
  .addi-banner-button {
    background: #094f2b; color: #fff; font-weight: 700;
    padding: 6px 12px; border-radius: 4px; white-space: nowrap;
  }
  .addi-banner-button:hover { background: #007a42; }
  @media(max-width:768px) {
    .addi-banner-wrapper { flex-direction: column; text-align: center; }
  }
</style>
